<h1>ノード更新</h1>

<div class="row">
  <div class="col-6">
    <%= form_with(model: @node, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :name, 'ノード名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :kind, 'ノード種別' %>
        <%= f.text_field :kind, class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :ipaddress, 'IPアドレス' %>
        <%= f.text_field :ipaddress, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :hostname, 'ホスト名' %>
        <%= f.text_field :hostname, class: 'form-control' %>
      </div>
  
      <%= f.submit '登録', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<%= link_to '一覧に戻る', nodes_path %>