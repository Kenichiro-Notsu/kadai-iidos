<h1>ノード一覧</h1>

<%= link_to 'ノード登録', new_node_path, class: 'btn btn-lg btn-primary' %>
<%= link_to '変更履歴', history_index_path, class: 'btn btn-lg btn-primary' %>

<ul>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ノード名</th>
        <th>ノード種別</th>
        <th>IPアドレス</th>
        <th>ホスト名</th>
      </tr>
    </thead>
    <tbody>
      <% @nodes.each do |node| %>
        <tr>
          <td><%= link_to node.name, node %></td>
          <td><%= node.kind %></td>
          <td><%= node.ipaddress %></td>
          <td><%= node.hostname %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</ul>